{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "module": "amd",
        "moduleResolution": "classic",
        "outDir": "dist/",
        "sourceMap": false,
        "target": "es5"
    },
    "exclude": [
        "**/*.spec.ts"
    ]
}